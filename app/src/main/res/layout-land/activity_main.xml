<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0091EA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questions"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_true"
        android:text="@string/button_true"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintRight_toLeftOf="@id/button_false"
        app:layout_constraintTop_toBottomOf="@id/text_view_questions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_false"
        android:textStyle="bold"
        android:text="@string/button_false"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintTop_toBottomOf="@id/text_view_questions"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/button_previous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_true"
        app:layout_constraintRight_toLeftOf="@id/button_next"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:text="@string/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_next"
        app:layout_constraintTop_toBottomOf="@id/button_true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_previous"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_next"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/cheat_button"
        app:layout_constraintTop_toBottomOf="@id/button_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheat_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>